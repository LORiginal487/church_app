<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_margin="5dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/churchPP"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/circleback"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:riv_oval="true" />

    <TextView
        android:id="@+id/churchName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="@color/toDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        app:layout_constraintTop_toTopOf="@id/churchPP"
        app:layout_constraintStart_toEndOf="@+id/churchPP"
        app:layout_constraintWidth_percent=".75"
        tools:layout_editor_absoluteY="10dp" />

    <TextView
        android:id="@+id/churchLocation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/defaultText"
        android:paddingStart="10dp"
        android:textColor="@color/toDark"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/churchPP"
        app:layout_constraintStart_toEndOf="@+id/churchPP"
        app:layout_constraintWidth_percent=".75" />


</androidx.constraintlayout.widget.ConstraintLayout>